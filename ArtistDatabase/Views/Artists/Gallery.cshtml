@model IEnumerable<ArtistDatabase.Models.Artwork>

@{
   ViewBag.Title = "Gallery";
}
<div class="page-header text-center">
        <h1>Gallery</h1>
</div>
<div class="row">
    <div class="col-sm-6 text-left">
        @*@Html.ActionLink("Add new Artwork", "CreateArtwork", null, new { @class = "btn btn-default" })*@
        @Html.ActionLink("Artists", "Index", null, new { @class = "btn btn-default" })
    </div>
    <div class="col-sm-6 text-right">
        @using (Html.BeginForm("Gallery", "Artists", FormMethod.Get))
        {
            <div>
                Artist: @Html.DropDownList("Artist", "All")
                Name: @Html.TextBox("name")
                <input type="submit" class="btn btn-default" value="Search" />
            </div>
        }
    </div>
</div>
<hr />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-4 top-buffer">
            @if (item.Picture != null)
            {
                <div class="border">
                    <img class="img-responsive" src="@Url.Content(item.Picture)" />
                    <div class="pic-info">
                        <h4 class="pic-info">@Html.DisplayFor(model => item.Name)</h4>
                        <p class="pic-info">by @Html.DisplayFor(Model => item.ArtistName)</p>
                        @Html.ActionLink("Edit", "EditArtwork", new { id = item.ArtworkID }, new { @class = "pic-info" })
                        @Html.ActionLink("Delete", "DeleteArtwork", new { id = item.ArtworkID }, new { @class = "pic-info" })                  
                    </div>  
                </div>
                
            }
            else
            {
                <div class="hovereffect">
                    <img class="img-responsive" src="@Url.Content("https://mi-od-live-s.legocdn.com/r/www/r/catalogs/-/media/catalogs/videos/disney%20princess/2015/mini%20movies/picture_perfect1488x842.jpg?l.r2=-477756477")" />
                    <div class="overlay">
                        <h2>Test</h2>
                        <p>Test</p>
                    </div>
                </div>
            }
                 
        </div>
    }
</div>
<div class="row">
    <div class="col-sm-2 text-left">
        
        @*@Html.ActionLink("Profile", "Details", new { id = ArtistID }, new { @class = "btn btn-default" })*@
    </div>
</div>

