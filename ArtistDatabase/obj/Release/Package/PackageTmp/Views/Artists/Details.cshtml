@model ArtistDatabase.Models.Artist

@{
    ViewBag.Title = "Details";
}
<div class="row">
    <div class="col-sm-12">
        <h2>@Html.DisplayFor(model => Model.Name)</h2>
    </div>
</div>
<hr />
<h4>Life and times of ...</h4>
<div class="row">
    <div class="col-sm-9">
        @if (Model.Info != null)
        {
            <p>
                @Html.DisplayFor(model => model.Info)
            </p>                   
        }
        else {
            <p>No career or information about @Html.DisplayFor(model => Model.Name)'s life has currently been provided! :(</p>
        }
    </div>
    <div class="col-sm-3">
        @if (Model.Picture != null)
        {
            <div>
                <img class="img-responsive border" src="@Url.Content(Model.Picture)" />
            </div>                  
        }
        else
        {
                <img class="img-responsive border" src="~/Images/Silhouette.jpg"/>
        }
        <table class="border pic-info">
            <tbody>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => Model.BirthDate)
                    </th>
                    <td>
                        @Html.DisplayFor(model => Model.BirthDate)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => Model.Nationality)
                    </th>
                    <td>
                        @Html.DisplayFor(model => Model.Nationality)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => Model.ArtStyle)
                    </th>
                    <td>
                        @Html.DisplayFor(model => Model.ArtStyle)
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
